{
    "compilerOptions": {
        "target": "es2021",
        "experimentalDecorators": true,
        "module": "es2020",
        "lib": [
            "es2021",
            "DOM",
            "DOM.Iterable"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        /* */
        "moduleResolution": "bundler",
        /* Linting */
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*.ts"
    ]
}